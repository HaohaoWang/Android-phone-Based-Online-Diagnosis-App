<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#808080" android:startColor="#808080" />

            <stroke android:width="2dip" android:color="#606060" />

            <corners android:radius="3dip" />

            <padding android:bottom="10dip" android:left="5dip" android:right="5dip" android:top="10dip" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#DFDFDF" android:startColor="#DFDFDF" />

            <stroke android:width="2dip" android:color="#606060" />

            <corners android:radius="3dip" />

            <padding android:bottom="10dip" android:left="5dip" android:right="5dip" android:top="10dip" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#DFDFDF" android:startColor="#DFDFDF" />

            <stroke android:width="2dip" android:color="#606060" />

            <corners android:radius="3dip" />

            <padding android:bottom="10dip" android:left="5dip" android:right="5dip" android:top="10dip" />
        </shape></item>

</selector>